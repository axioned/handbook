---
// src/components/CustomTags.astro
const { label } = Astro.props ?? "new";

interface LabelStyles {
  [key: string]: {
    borderColor: string;
    bgColor: string;
  };
}

const labelStyles: LabelStyles = {
  new: {
    borderColor: "#3369ff",
    bgColor: "#17264f",
  },
  updated: {
    borderColor: "#bd53ee",
    bgColor: "#40224e",
  },
};

const style = {
  display: "inline-block",
  marginLeft: "4px",
  padding: "0.125rem 0.375rem",
  border: `1px solid ${labelStyles[label]?.borderColor ?? "#fff"}`,
  borderRadius: "0.25rem",
  backgroundColor: `${labelStyles[label]?.bgColor}`,
  fontFamily: "var(--sl-font-system-mono)",
  fontSize: "var(--sl-text-xs)",
  fontWeight: "400",
  lineHeight: "1",
  textTransform: "capitalize",
  verticalAlign: "middle",
};
---

<!-- Component Template (HTML + JS Expressions) -->{
  label && <span style={style}>{label}</span>
}
